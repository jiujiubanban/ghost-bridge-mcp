{
  "manifest_version": 3,
  "name": "Ghost Bridge",
  "version": "0.1.0",
  "description": "Zero-restart Chrome debugger bridge for Claude MCP, optimized for no-sourcemap production debugging.",
  "permissions": ["debugger", "activeTab", "scripting", "storage", "tabs"],
  "action": {
    "default_title": "Ghost Bridge",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
